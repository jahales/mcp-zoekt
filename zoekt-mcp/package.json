{
  "name": "@jahales/mcp-zoekt",
  "version": "2.0.1",
  "description": "MCP server for Zoekt code search - enables AI assistants to search across indexed repositories",
  "license": "Apache-2.0",
  "mcpName": "io.github.jahales/mcp-zoekt",
  "author": "Jacob Hales",
  "homepage": "https://github.com/jahales/mcp-zoekt#readme",
  "bugs": {
    "url": "https://github.com/jahales/mcp-zoekt/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jahales/mcp-zoekt.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-zoekt": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "prepare": "npm run build",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "watch": "tsc --watch",
    "test": "vitest run tests/unit",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:all": "vitest run",
    "test:watch": "vitest tests/unit",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "zoekt",
    "code-search",
    "ai",
    "copilot",
    "claude"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "pino": "^9.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "globals": "^17.2.0",
    "shx": "^0.3.4",
    "tsx": "^4.0.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  }
}
